<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    
	<title>ASK ALMA</title>
	<%= stylesheet_link_tag 'base' %>
	<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Lato:100,300,400,300italic' %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

	<%= javascript_include_tag 'bundle'  %>
	<%= csrf_meta_tags %>
</head>

<body>
	<nav class="navbar navbar-default">
		<div class="content container-fluid">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
		        <span class="sr-only">Toggle navigation</span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		      </button>
		      <%= link_to(questions_path, class: "navbar-brand action-item navbar-btn") do %>
					ASK ALMA
			  <% end -%>
		    </div>

		    <!-- Collect nav links, form and other content for toggling -->
		    <div class="collapse navbar-collapse">
				<ul class="nav navbar-nav">
					<li>
						<%= link_to(questions_path, class: "navbar-btn") do %>
						newsfeed
						<% end -%>
					</li>
					<li>
						<%= link_to(new_question_path, class: "navbar-btn") do %>
						ask
						<% end -%>
					</li>
				</ul>
				<ul class="nav navbar-nav pull-right">
					<% if user_signed_in? %>
					<li>
						<%= link_to('logout', destroy_user_session_path, :method => :delete, class: "navbar-btn") %>
					</li>
					<% end %>
					<li><a href="#" class="navbar-btn">help</a></li>
				</ul>

				<div class="search-bar search-full">
					<%= render :partial => 'layouts/search' %>
				</div>
			</div> <!-- navbar-collapse end -->
		</div> <!-- container fluid end -->
	</nav> <!-- nav end -->

	<div class="jumbotron" id="header">
		<div class="content">
			<h1> Ask Alma </h1>
			<div>
				<h3> Quora for Columbia </h3>
			</div>

			<!-- large search bar here? -->
			<div class="search-bar search-full">
					<%= render :partial => 'layouts/search' %>
			</div>
		</div>
	</div>


	<%= yield %>

</body>

<footer>
	<div class="content">
		<p>Built with &hearts; by ADI's Qumbia Team!</p>
	</div>
</footer>
</html>
